/* pages/bill-edit/bill-edit.wxss */
.account-list {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    margin-left: 5px;
    margin-right: 5px;
}

.title {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.subtitle {
    margin-top: 5px;
}

.account-name {
    font-size: 18px;
    font-weight: bold;
    margin-right: 20px;
    width: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.account-date {
    font-size: 10px;
}

.account-departure {
    text-align: right;
    font-size: 12px;
    width: 50px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.arrow-right {
    margin-left: 10px;
    margin-right: 10px;
}

.account-destination {
    text-align: left;
    font-size: 12px;
    width: 50px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.new-account {
    display: flex;
    justify-content: center;
}
