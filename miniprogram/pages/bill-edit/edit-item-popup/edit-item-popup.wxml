<!--pages/bill-edit/edit-item-popup/edit-item-popup.wxml-->
<bill-modal isVisible="{{isShowEditItemPopup}}" bind:cancel="onCancelItemEdit" bind:finish="onFinishItemEdit" title="编辑账单">
    <view class="edit-item-container">
        <scroll-view class="scroll-view-container" scroll-y="true">
            <view class="account-property-container">
                <view class="account-property-name single-line">货物名</view>
                <input class="acount-property-value" focus="true" maxlength="20" value="{{name}}" bind:input="onInputName" />
            </view>
            <view class="separate" />
            <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bind:change="onChangeDate">
                <view class="account-property-container">
                    <view class="account-property-name single-line">日期</view>
                    <View class="acount-property-value">{{date}}</View>
                </view>
            </picker>
            <view class="separate" />
            <view class="account-property-container" bind:tap="onSelectDeparture">
                <view class="account-property-name single-line">出发地</view>
                <view class="acount-property-value">{{departure}}</view>
            </view>
            <view class="separate" />
            <view class="account-property-container" bind:tap="onSelectDestination">
                <view class="account-property-name single-line">目的地</view>
                <view class="acount-property-value">{{destination}}</view>
            </view>
            <view class="separate" />
            <view class="account-property-container">
                <view class="account-property-name single-line">单价</view>
                <input class="acount-property-value" maxlength="20" value="{{price}}" type="number" bind:input="onInputDestination" />
            </view>
            <view class="separate" />
            <view class="account-property-container">
                <view class="account-property-name single-line">重量</view>
                <input class="acount-property-value" maxlength="20" value="{{weight}}" type="number" bind:input="onInputDestination" />
            </view>
            <view class="separate" />
            <view class="account-property-container">
                <view class="account-property-name single-line">总价</view>
                <input class="acount-property-value" maxlength="20" value="{{totalPrice}}" type="number" bind:input="onInputDestination" />
            </view>
        </scroll-view>
        <view class="btn-delete simple-btn" bind:tap="onDelete">删除账单</view>
    </view>
</bill-modal>